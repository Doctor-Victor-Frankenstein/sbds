CREATE ROLE sbds_read_only_role;

GRANT SELECT ON
    {% for table_name in all_tables -%}
    {{ table_name }},
    {% endfor -%}
    sbds_core_blocks,
    sbds_views_all_ops,
    sbds_views_real_ops,
    sbds_views_virtual_ops
TO
    sbds_read_only_role;

CREATE ROLE sbds_block_follower_role;

GRANT SELECT,INSERT ON
    {% for table_name in all_tables -%}
    {{ table_name }},
    {% endfor -%}
    sbds_core_blocks,
    sbds_meta_accounts
TO
    sbds_block_follower_role;
